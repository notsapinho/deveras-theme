{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "blocks": [
        {
            "alignment": "left",
            "segments": [
                {
                    "foreground": "#ACB0BE",
                    "style": "plain",
                    "template": "{{.Icon}} ",
                    "type": "os"
                },
                {
                    "foreground": "#45F1C2",
                    "style": "plain",
                    "template": "{{ .UserName }} <#ffffff>in</> ",
                    "type": "session"
                },
                {
                    "foreground": "#55B9C4",
                    "properties": {
                        "style": "folder"
                    },
                    "style": "plain",
                    "template": "{{ .Path }} ",
                    "type": "path"
                },
                {
                    "foreground": "#C678DD",
                    "properties": {
                        "fetch_status": true
                    },
                    "style": "plain",
                    "template": "<#ffffff>on</> {{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }} ",
                    "type": "git"
                },
                {
                    "foreground": "#98C379",
                    "properties": {
                        "fetch_version": true
                    },
                    "style": "plain",
                    "template": "<#ffffff>via</> \ue781 {{ if .PackageManagerIcon }}{{ .PackageManagerIcon }} {{ end }}{{ .Full }} ",
                    "type": "node"
                },
                {
                    "foreground": "#4dafff",
                    "properties": {
                        "display_default": false
                    },
                    "style": "plain",
                    "template": "<#ffffff>via</> îˆµ {{ .Full }} {{ if .Venv }}({{ .Venv }}){{ end }} ",
                    "type": "python"
                },
                {
                    "foreground": "#C94A16",
                    "style": "plain",
                    "template": "x ",
                    "type": "status"
                }
            ],
            "type": "prompt"
        },
        {
            "alignment": "left",
            "newline": true,
            "segments": [
                {
                    "foreground": "#63F08C",
                    "style": "plain",
                    "template": "\u279c ",
                    "type": "text"
                }
            ],
            "type": "prompt"
        }
    ],
    "version": 3
}
